<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/llTask"
    android:gravity="center"
    android:padding="3dp"
    android:background="@color/task_background">

    <LinearLayout
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:orientation="vertical"
        android:background="@color/teal_200"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >
        <TextView
            style="@style/MiniContentBold"
            android:id="@+id/tPoints"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="+5"
            android:textColor="@color/darker_green"
            android:textSize="15sp" />

        <ImageView
            android:layout_height="80dp"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_wiper" />

        <TextView
            style="@style/MiniContentBold"
            android:id="@+id/tName"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Passer le balais"
            android:textSize="12sp" />
        <TextView
            style="@style/MiniContentItalic"
            android:id="@+id/tDate"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="A faire dans deuxjours"
            android:textColor="@color/primary_lesser"
            android:textSize="10sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>